<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.abhishek.tapmoney.NewVoucherActivity"
    android:id="@+id/new_voucher_frame">

    <TextView android:text="@string/new_voucher" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/voucher_title"
        android:textSize="48sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buy_button"
        android:id="@+id/buyButton"
        android:onClick="buyVoucher"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/voucher_title"
        android:layout_alignParentEnd="false"
        android:layout_marginTop="30dp"
        android:id="@+id/newvoutable">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/row1">

            <TextView
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/value"
                android:id="@+id/textView"
                android:textSize="18sp" />

            <EditText
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/editText"
                android:layout_column="1"
                android:layout_span="2" />

        </TableRow>

        <TableRow

            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="30dp"
            android:id="@+id/rowcontainer1">

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expires in"
                android:id="@+id/textView2"
                android:textSize="18dp" />

            <EditText
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:layout_column="1"
                android:id="@+id/editText2"
                android:layout_width="wrap_content"
                android:layout_span="0" />

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Months"
                android:id="@+id/textView3"
                android:layout_column="1"
                android:layout_span="1" />
        </TableRow>
    </TableLayout>

</RelativeLayout>
