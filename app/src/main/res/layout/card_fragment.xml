<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/icon1"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:padding="6dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/creditcard" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/disable"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:id="@+id/disable"
        android:layout_alignLeft="@id/icon1"
        android:layout_alignTop="@id/icon1"
        android:visibility="invisible"
        android:layout_alignParentStart="true" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="50.0 $"
        android:id="@+id/textView4"
        android:layout_alignTop="@+id/icon1"
        android:layout_marginTop="65dip"
        android:layout_marginLeft="125dip"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:textSize="36dip" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="4628 1234 5678 9012"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="130dp"
        android:textColor="#ffffffff"
        android:id="@+id/textView3"
        android:textStyle="bold"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/buttonholder"
        android:layout_below="@id/icon1"
        android:layout_alignParentLeft="true"
        android:layout_height="40dp" android:weightSum="3"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingBottom="4dp">


        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Gyft It!"
            android:id="@+id/imageButton3"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_green_light"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="payWave"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton4"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_blue_light"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton5"
            android:text="Save"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_red_light"
            style="?android:attr/borderlessButtonStyle"/>

        </LinearLayout>
    <View
        android:layout_above="@id/icon1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/background"
        android:id="@+id/linearLayout">
    </View>



</RelativeLayout>