<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll"
    android:layout_width="fill_parent"

    android:layout_height="fill_parent"
    android:background="#FFCECFCE">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/my_vouchers" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:textSize="48sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ff000000" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:id="@+id/main_table"
        android:layout_below="@+id/title"
        android:layout_alignParentEnd="true">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/row1"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp">

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_voucher"
                android:id="@+id/button"
                android:layout_column="0"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"
                android:onClick="newVoucher"
                bootstrap:bb_roundedCorners="true"
                bootstrap:bb_type="primary"
                bootstrap:bb_icon_left="fa-plus-circle"

                android:layout_weight="1" />

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="Refresh"
                android:id="@+id/button3"
                android:onClick="refreshData"

                bootstrap:bb_roundedCorners="true"
                bootstrap:bb_icon_left="fa-refresh"
                bootstrap:bb_type="success"/>

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/card_small"
                android:id="@+id/imageView"
                android:layout_weight="1"
                android:cropToPadding="false"
                android:padding="0dp"
                android:scaleType="fitCenter"
                android:layout_column="0" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_column="1"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="69dp"
                    android:id="@+id/imageButton"
                    android:src="@drawable/logo_nfc_blue" />

                <ImageButton
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton2"
                    android:src="@drawable/logo_nfc_blue" />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/row2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_margin="20dp">

        </TableRow>
    </TableLayout>

</RelativeLayout>
</ScrollView>
