<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/my_vouchers" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:textSize="48sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:id="@+id/main_table"
        android:layout_below="@+id/title"
        android:layout_alignParentEnd="true">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/row1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_voucher"
                android:id="@+id/button"
                android:layout_column="0"
                android:layout_marginLeft="10dp"
                android:onClick="newVoucher"
                android:layout_weight="1"
                android:layout_span="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:text="Refresh"
                android:id="@+id/button3"
                android:onClick="refreshData"
                android:layout_span="1" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:layout_span="3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/img_citicard_small"
                android:id="@+id/imageView"
                android:layout_weight="1"
                android:cropToPadding="false"
                android:padding="0dp"
                android:scaleType="fitCenter" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/row2">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/send"
                android:id="@+id/send1"
                android:onClick="sendNFC"
                android:elegantTextHeight="false"
                android:layout_marginRight="100dp"
                android:layout_weight="1"
                android:nestedScrollingEnabled="false" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VpW"
                android:id="@+id/button2"
                android:layout_weight="1"
                android:layout_column="1" />
        </TableRow>
    </TableLayout>

</RelativeLayout>
</ScrollView>
